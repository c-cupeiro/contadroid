<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.upv.ccupeiro.contadroid.actualmonth.view.fragments.TabExpensesPaidFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_card_paid_expenses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/tv_empty_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actual_month_tab_expenses_paid_empty_case"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:visibility="gone"
        />

</FrameLayout>
