<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:elevation="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_view_padding_title"
                android:background="@color/colorPrimaryLight">
                <ImageView
                    android:id="@+id/iv_card_title_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="4dp"
                    app:srcCompat="@drawable/bus_icon"/>
                <TextView
                    android:id="@+id/tv_card_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_card_title_icon"
                    android:layout_centerVertical="true"
                    android:paddingLeft="4dp"
                    android:text="Transporte"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_card_title_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="0dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/textColor"
                    android:text="1200.00 â‚¬"
                    android:textSize="24sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_title"
                android:background="@color/colorBackCard">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="Lista!!"
                    android:gravity="center"/>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>